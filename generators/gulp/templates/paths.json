{
  "browsersync": {
    "server": [".tmp", "dist"],
    "watch": {
      "jekyll": ["src/**/*.md", "src/**/*.html", "src/**/*.yml"],
      "text": ["src/**/*.xml", "src/**/*.txt"],
      "scripts": "src/assets/javascript/**/*.js",
      "styles": "src/assets/scss/**/*.scss",
      "images": "src/assets/images/**/*"
    }
  },
  "clean": {
    "assets": [".tmp/**/*", "!.tmp/assets", "!.tmp/assets/images", "!.tmp/assets/images/**/*", "dist/assets"],
    "images": [".tmp/assets/images", "dist/assets/images"],
    "dist": ["dist/", ".tmp/dist"],
    "gzip": ["dist/**/*.gz"],
    "jekyll": [".tmp/src"]
  },
  "copy": {
    "assets": {
      "src": ".tmp/assets/**/*",
      "dest": "dist/assets"
    },
    "jekyll": {
      "src": ".tmp/dist/**/*",
      "dest": "dist"
    }
  },
  "fonts": {
    "src": "src/assets/fonts/**/*",
    "dest": ".tmp/assets/fonts"
  },
  "html": {
    "src": "dist/**/*.html",
    "dest": "dist"
  },
  "images": {
    "src": "src/assets/images/**/*",
    "dest": ".tmp/assets/images"
  },
  "inject": {
    "head": {
      "src": ".tmp/src/_includes/head.html",
      "styles": ".tmp/assets/stylesheets/*.css",
      "dest": ".tmp/src/_includes"
    },
    "footer": {
      "src": ".tmp/src/_layouts/default.html",
      "scripts": ".tmp/assets/javascript/*.js",
      "dest": ".tmp/src/_layouts"
    }
  },
  "jekyll": {
    "src": ["src/**/*", "!src/assets/**/*", "!src/assets"],
    "dest": ".tmp/src"
  },
  "scripts": {
    "src": [
      "src/assets/javascript/vendor.js",
      "src/assets/javascript/main.js"
    ],
    "index": ".tmp/assets/javascript/index.js",
    "dest": ".tmp/assets/javascript"
  },
  "styles": {
    "src": "src/assets/scss/style.scss",
    "dest": ".tmp/assets/stylesheets"
  }
}
